        crossorigin="anonymous"></script>
    <script>
        var flag = 0;
        document.querySelector(".picture")
            .addEventListener("click", function () {
                if (flag === 0) {
                    document.querySelector(".primg_card").style.display = "initial";
                    flag = 1;
                }
                else {
                    document.querySelector(".primg_card").style.display = "none";
                    flag = 0;
                }
            })

        document.querySelector("#createbutton")
            .addEventListener("click", function () {
                if (flag === 0) {
                    document.querySelector(".createpost").style.display = "flex";
                    flag = 1;
                }
                else {
                    document.querySelector(".createpost").style.display = "none";
                    flag = 0;
                }
            })


        document.querySelector("#cnl")
            .addEventListener("click", function () {
                document.querySelector(".primg_card").style.display = "none";
            })

        document.querySelector("#close")
            .addEventListener("click", function () {
                document.querySelector(".createpost").style.display = "none";
            })

        document.querySelector("#upr")
            .addEventListener("click", function () {
                document.querySelector("#file").click();

            })
        document.querySelector("#file").addEventListener("change", function () {
            document.querySelector("#profileform").submit();
        })

        document.querySelector("#sfc")
            .addEventListener("click", function () {
                document.querySelector("#post").click();

            })
        document.querySelector("#post").addEventListener("change", function () {
            document.querySelector("#postform").submit();
        })

        // document.querySelectorAll(".feed .post .f1")
        // .forEach(function(elemFor){
        //      elemFor.addEventListener("mouseenter",function(){
        //       document.querySelector(".feed .post .f1 video").play();
        //          alert("heyy")
        //      })
        // })

        document.querySelector("#followers")
            .addEventListener("click", function () {
                document.querySelector(".follower_card").style.display = "flex"
            })

        document.querySelector("#following")
            .addEventListener("click", function () {
                document.querySelector(".following_card").style.display = "flex"
            })

        document.querySelector("#follower_close")
            .addEventListener("click", function () {
                document.querySelector(".follower_card").style.display = "none"
            })

        document.querySelector("#following_close")
            .addEventListener("click", function () {
                document.querySelector(".following_card").style.display = "none"
            })
    </script>
</body>

</html>