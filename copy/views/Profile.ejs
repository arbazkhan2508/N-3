                            fill="currentColor"></path>
                    </svg>
                    <h3>Drag photos and videos here</h3>
                    <button id="sfc" type="submit">Select from computer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="following_card">
        <div id="follower_container">
            <div class="follower_nav">
                <div class="head_container">
                    <h6>Following</h6>
                    <i id="following_close" class="ri-close-line"></i>
                </div>
            </div>

            <% user.following.forEach(function(following){ %>
                <div class="follow_user">
                    <div class="follower_det">
                        <div class="follower_img">
                            <img src="/getFile/<%= following.userProfileimg %>" alt="">
                        </div>
                        <h6>
                            <%= following.name %>
                        </h6>
                    </div>
                    <a href="/follow/<%= following._id %>">
                        <div class="folower_button">
                            Following
                        </div>
                    </a>

                </div>
                <% })%>
        </div>
    </div>
    <div class="follower_card">
        <div id="follower_container">
            <div class="follower_nav">
                <div class="head_container">
                    <h6>Followers</h6>
                    <i id="follower_close" class="ri-close-line"></i>
                </div>
            </div>

            <% user.followers.forEach(function(followers){ %>
                <div class="follow_user">
                    <div class="follower_det">
                        <div class="follower_img">
                            <img src="/getFile/<%= followers.userProfileimg %>" alt="">
                            
                        </div>
                       <% var flw=user.following %>
                        <% if(flw.length === 0){ %>
                            <%= followers.name %> <a href="#">follow</a>
                        <% }else{ %>
                             <% if (flw.some(ef=> ef._id.equals(followers._id))) { %>
                                <%= followers.name %>
                             <% } else { %>
                                 <%= followers.name %> <a href="#">follow</a>
                             <% } %>
                        <% } %>

                    </div>

                    <a href="/remove/<%= followers._id %>">
                        <div class="folower_button">
                            Remove
                        </div>
                    </a>

                </div>
            <% })%>
        </div>
    </div>
    <div id="main">
        <div class="contain">
            <% include ./partials/navbar.ejs %>
                <div id="right">
                    <div class="profile">
                        <div class="me">
                            <div class="me_user">
                                <div class="img">
                                    <div class="picture">
                                        <a data-bs-toggle="modal" data-bs-target="#staticBackdrop" href="#">
                                            <img src="/getFile/<%= user.userProfileimg %>" alt=""></a>
                                    </div>
                                </div>
                                <div class="about">
                                    <div class="user">
