                      <video id="leftVideo" autoplay loop src="/getpost/<%= postone.post %>"></video>
                      <div id="reelbutton" class="x9f619 xxk0z11 xvy4d1p x11xpdln xii2z7h x19c4wfv"><svg
                          aria-label="Reels" class="_ab6-" color="rgb(0, 0, 0)" fill="rgb(0, 0, 0)"
